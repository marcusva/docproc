{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "go",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "test common",
            "suppressTaskName": true,
            "isTestCommand": true,
            "args": [
                "test",
                "./common/config",
                "./common/log",
                "./common/path",
                "./common/queue/processors",
                "./common/queue",
                "./common/rules",
                "./common/service"
            ]
        },
        {
            "taskName": "test docproc.fileinput",
            "suppressTaskName": true,
            "isTestCommand": true,
            "args": [
                "test",
                "./docproc.fileinput/input"
            ]
        },
        {
            "taskName": "build docproc.fileinput",
            "suppressTaskName": true,
            "args": [
                "build",
                "-v",
                "./docproc.fileinput"
            ]
        },
        {
            "taskName": "build docproc.proc",
            "suppressTaskName": true,
            "args": [
                "build",
                "-v",
                "./docproc.proc"
            ]
        }
    ]
}