{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "go",
    "echoCommand": true,
    "tasks": [
        {
            "label": "build documentation",
            "command": "cmd",
            "args": [
                "/C",
                "cd doc & make html"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "test common",
            "command": "go",
            "args": [
                "test",
                "-tags",
                "beanstalk nats nsq",
                "./common/..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test docproc.fileinput",
            "command": "go",
            "args": [
                "test",
                "./docproc.fileinput/..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build docproc.fileinput",
            "command": "go",
            "args": [
                "build",
                "-tags",
                "beanstalk nats nsq",
                "-v",
                "./docproc.fileinput"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test docproc.proc",
            "command": "go",
            "args": [
                "test",
                "./docproc.proc/..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build docproc.proc",
            "command": "go",
            "args": [
                "build",
                "-tags",
                "beanstalk nats nsq",
                "-v",
                "./docproc.proc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build docproc.webinput",
            "command": "go",
            "args": [
                "build",
                "-tags",
                "beanstalk nats nsq",
                "-v",
                "./docproc.webinput"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test docproc.webinput",
            "command": "go",
            "args": [
                "test",
                "./docproc.webinput/..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
